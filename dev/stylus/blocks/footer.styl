.footer
  bgc $blue
  pos relative
  z-index 1
  border-top 1px solid alpha(white, .1)
  .container
    df(center, space-between)
    h 87px
    @media $PortraitMedium
      dfv()
      h auto
      padding 25px 20px
  &__side
    df(flex-start, center)
  &__socials
    ml 42px
    df(center, flex-start)
    @media $LandscapeMax
      ml 20px
    @media $PortraitMax
      dn()
    &-elem
      color #c0bfca
      fontify 14px 400 16px
      &[data-type="inst"]
        background url('data:image/png;base64,') no-repeat left center
        &:after
          content "Instagram"
          pl 24px
          @media $LandscapeMax
            content ""
            pl 16px
      &[data-type="vk"]
        &:after
          content "Vkontakte"
          pl 24px
          @media $LandscapeMax
            content ""
            pl 16px
        background url('data:image/png;base64,') no-repeat left center
      &[data-type="fb"]
        &:after
          content "Facebook"
          pl 24px
          @media $LandscapeMax
            content ""
            pl 16px
        background url('data:image/png;base64,') no-repeat left center
      & + &
        ml 20px
        @media $LandscapeMax
          ml 12px
  &__copy
    color white
    fontify 14px 400 16px
  &__dextra
    pos relative
    color white
    font-family Verdana, Geneva, sans-serif
    fontify 9px 400 14px
    text-transform uppercase
    letter-spacing 0.18em
    @media $PortraitMedium
      mt 20px
      l 84px
    span
      pos absolute
      t 3px
      r calc(100% + 10px)
      bgc $orange
      color $dark
      font-family Arial
      fontify 12px 900 21px
      text-transform uppercase
      letter-spacing 0.1em
      border-radius 2px
      padding 0 6px
      transition 0.7s background
    &:hover span
      bgc $blue
