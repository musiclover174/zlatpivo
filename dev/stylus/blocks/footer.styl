.footer
  bgc $blue
  pos relative
  z-index 1
  .container
    df(center, space-between)
    h 87px
    @media $PortraitMedium
      dfv(center, center)
      h auto
      padding 25px 20px
  &__side
    df(flex-start, center)
  &__socials
    ml 42px
    mt -6px
    df(center, flex-start)
    @media $LandscapeMax
      ml 20px
    @media $PortraitMax
      dn()
    &-elem
      color #c0bfca
      fontify 14px 400 26px
      transition .7s background
      &:after
        pl 34px
      &[data-type="inst"]
        background url("data:image/png;base64,") no-repeat left center
        &:hover
          background-image url("data:image/png;base64,")
        &:after
          content "Instagram"
          @media $LandscapeMax
            content ""
            pl 26px
      &[data-type="vk"]
        background url("data:image/png;base64,") no-repeat left center
        &:hover
          background-image url("data:image/png;base64,")
        &:after
          content "Vkontakte"
          @media $LandscapeMax
            content ""
            pl 26px
      &[data-type="fb"]
        background url("data:image/png;base64,") no-repeat left center
        &:hover
          background-image url("data:image/png;base64,")
        &:after
          content "Facebook"
          @media $LandscapeMax
            content ""
            pl 26px
      & + &
        ml 20px
        @media $LandscapeMax
          ml 12px
  &__copy
    color white
    fontify 14px 400 16px
  &__dextra
    pos relative
    color white
    font-family Verdana, Geneva, sans-serif
    fontify 9px 400 14px
    text-transform uppercase
    letter-spacing 0.18em
    mt -1px
    @media $PortraitMedium
      mt 20px
      l 44px
    span
      pos absolute
      t 3px
      r calc(100% + 10px)
      bgc $orange
      color $dark
      font-family Arial
      fontify 12px 900 21px
      text-transform uppercase
      letter-spacing 0.1em
      border-radius 2px
      padding 0 6px
      transition 0.7s background
    &:hover span
      bgc $cream
  &__warning
    bgc #232041
    padding 12px 47px
    color white
    fontify 15px 400 19px
    text-align center
    letter-spacing .12em
    @media $LandscapeMedium
      padding 12px 20px
    @media $LandscapeMedium
      fontify 12px 400 18px
