.confirm-age
  display flex
  justify-content center
  align-items center
  flex-direction column
  position relative
  height 100%
  background-position center top
  background-repeat no-repeat
  background-size cover
  text-align center
  padding 60px 20px
  z-index 1

  &:before
    content ''
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    background-color rgba(#2b284c, .65)
    z-index -1

  &__title
    color white
    font-size 50px
    font-weight 600
    line-height 60px

    @media $LandscapeMedium
      font-size 40px
      line-height 50px

    @media $PortraitMedium
      font-size 32px
      line-height 36px

  &__btn
    font-size 19px
    line-height 24px
    padding 15px 47px
    border-radius 27px
    margin-top 37px

  &__warning
    width 100%
    position relative
    padding-top 37px
    margin-top 39px
    color white
    font-size 14px
    font-weight 400
    line-height 20px
    text-transform uppercase
    letter-spacing 0.05em

    &:before
      content ''
      position absolute
      left 50%
      transform translateX(-50%)
      top 0
      width 100%
      max-width 462px
      height 1px
      background-color rgba(#fff, .5)
      z-index 1
