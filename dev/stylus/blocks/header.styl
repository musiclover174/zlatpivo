.socials
  z-index 2
  df()
  mr 56px
  @media $LandscapeMax
    mr 26px
  @media $PortraitMin
    dn()
  &__href
    size 26px
    border-radius 50%
    transition .7s background, .7s opacity, filter .7s
    & + &
      ml 10px
    &[data-type="vk"]
      background url('data:image/png;base64,') no-repeat center
      &:hover
        background-image url('data:image/png;base64,')
    &[data-type="inst"]
      background url('data:image/png;base64,') no-repeat center
      &:hover
        background-image url('data:image/png;base64,')
    &[data-type="fb"]
      background url('data:image/png;base64,') no-repeat center
      &:hover
        background-image url('data:image/png;base64,')

.header
  pos absolute
  z-index 2
  l 0
  t 0
  r 0
  padding 50px 87px 0
  df(flex-start, space-between)
  @media $desktopMedium
    padding 30px 47px 0
  @media $LandscapeMedium
    padding 20px 20px 0
  &__side
    df()
  &__logo
    db()
    pos relative
    t -11px
    max-width 120px
    &-img
      max-width 100%
      transition: .7s filter
  &__shadow
    pos fixed
    z-index 12
    b 0
    h 0
    w 100%
    l 0
    bgc $cream
    transition .7s height
  &__button
    pos relative
    w 33px
    h 25px
    cursor pointer
    z-index 15
    &:before
      content ""
      pos absolute
      t 0
      r 0
      w 100%
      h 2px
      bgc $orange
      transition .5s width, .7s background, .5s transform, .5s top
    &:after
      content ""
      pos absolute
      b 0
      r 0
      w 100%
      h 2px
      bgc $orange
      transition .5s width, .7s background, .5s transform, .5s top
    &-meat
      content ""
      pos absolute
      t 50%
      r 0
      w 100%
      h 2px
      mt -1px
      bgc $orange
      transition .5s width, .7s background, .5s transform, .5s top
    &:not(.open):hover
      &:before
        animation burger-hover 1s infinite ease-in-out alternate
      &:after
        animation burger-hover 1s infinite ease-in-out alternate forwards 400ms
    &:not(.open):hover &-meat
      animation burger-hover 1s infinite ease-in-out alternate forwards 200ms
    &.open
      &:before
        animation burger-top 1s ease-in-out forwards
      &:after
        animation burger-bottom 1s ease-in-out forwards
      & ^[-1]-meat
        opacity 0
    &.open.remove
      &:before
        animation burger-top-invert 1s ease-in-out forwards
      &:after
        animation burger-bottom-invert 1s ease-in-out forwards
      & ^[-1]-meat
        opacity 1
        transition .4s opacity .6s


@keyframes burger-hover
  0%
    w 100%
  50%
    w 50%
  100%
    w 100%

@keyframes burger-top
  0%
    t 0
  40%
    t 11px
  60%
    t 11px
    transform rotate(0)
  100%
    t 11px
    transform rotate(45deg)

@keyframes burger-bottom
  0%
    b 0
  40%
    b 12px
  60%
    b 12px
    transform rotate(0)
  100%
    b 12px
    transform rotate(-45deg)

@keyframes burger-top-invert
  0%
    t 12px
    transform rotate(45deg)
  40%
    t 12px
    transform rotate(0)
  60%
    t 12px
  100%
    t 0

@keyframes burger-bottom-invert
  0%
    b 12px
    transform rotate(-45deg)
  40%
    b 12px
    transform rotate(0)
  60%
    b 12px
  100%
    b 0


html.burgeropen
  overflow hidden
  position: fixed
  width 100%

  body
    overflow hidden
  .header
    &__shadow
      h 100%
    .menu
      l 0
      opacity 1
      transition-delay .7s
    &__logo-img
      position relative
      z-index 15
      filter: brightness(0)
    &__button
      filter: none!important
      &:before
        background-color $blue
      &:after
        background-color $blue
      &-meat
        background-color $blue

  .socials
    position relative
    z-index 15
    filter: none!important
    &__href
      &[data-type="vk"]
        background-image url('data:image/png;base64,')
        &:hover
          filter: brightness(0)

      &[data-type="inst"]
        background-image url('data:image/png;base64,')
        &:hover
          filter: brightness(0)

      &[data-type="fb"]
        background-image url('data:image/png;base64,')
        &:hover
          filter: brightness(0)

html.touchevents
  .header__button
    &:not(.open):hover
      &:before
        animation none
      .header__button-meat
        animation none
      &:after
        animation none
    &:not(.open):hover .burger__button-meat
      animation none

body:not(.index)
  .header__button,
  .socials,
  .header__logo-img
    filter brightness(0%)
    transition .7s filter
  .socials__href:hover
    opacity .4

body.news
  @media $LandscapeMinFrom
    .header__button,
    .socials,
    .header__logo-img
      filter brightness(0%) invert(1)
      transition .7s filter
    .header__button.open
      filter none
    .socials__href:hover
      opacity .4
