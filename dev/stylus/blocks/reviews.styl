.reviews
  dfv()
  mt -20px
  @media $LandscapeMedium
    mt 0
  &__filter
    ib()
    mt 23px
    ml 33px
    white-space nowrap
    @media $LandscapeMax
      ml 23px
    @media $LandscapeMedium
      ml 0
      mb 30px
      mt -10px
    &-spacer
      ib()
      fontify 15px 600 24px
      mr 5px
      mt -4px
    .btn
      ml 55px
      mt -10px
      @media $LandscapeMax
        ml 25px
      @media $PortraitMax
        ml 0
        mt 20px
        db()
        max-width 170px
    .SumoSelect
      width auto
    .SumoSelect>.optWrapper
      w 314px
    .SumoSelect>.CaptionCont
      fontify 15px 600 18px
      min-height 18px
      border-bottom 2px dotted $orange
    .SumoSelect>.CaptionCont>span
      pr 0
    .SumoSelect>.CaptionCont>label
      dn()
  &__item
    pos relative
    z-index 1
    & + &
      mt 47px
      @media $LandscapeMax
        mt 30px
  &__question
    df()
    c white
    bgc $blue
    padding 25px 30px 45px
    @media $LandscapeMax
      flex-direction column
      pb 25px
    &-from
      w 185px
      pr 30px
      @media $LandscapeMax
        w 100%
        pr 0
    &-name
      fontify 13px 600 18px
    &-date
      mt 10px
      color alpha(white, .5)
      fontify 13px 400 18px
    &-place
      w 185px
      text-align right
      fontify 13px 500 25px
      mt -3px
      @media $LandscapeMax
        w 100%
        mt 20px
    &-content
      w calc(100% - 370px)
      pr 30px
      @media $LandscapeMax
        w 100%
        pr 0
        mt 20px
    &-titleover
      ml -30px
      w calc(100% + 30px)
    &-title
      ib()
      fontify 13px 600 18px
      ml 30px
      mb 10px
    &-rate
      pos relative
      display inline-block
      vertical-align top
      mt 2px
      ml 30px
      mb 10px
      size 72px 12px
      background url('data:image/png;base64,') no-repeat left top
      &:before
        content ""
        pos absolute
        l 0
        t 0
        h 12px
        background url('data:image/png;base64,') no-repeat left top
      &_star1:before
        w 21%
      &_star2:before
        w 40%
      &_star3:before
        w 61%
      &_star4:before
        w 81%
      &_star5:before
        w 100%
    &-text
      fontify 13px 400 18px
      mt 5px
    &-shaver
      ib()
      color white
      mt 15px
      fontify 13px 600 18px
      border-bottom 2px dotted $orange
      transition .7s border
      &:hover
        border-color transparent
  &__answer
    df()
    pos relative
    bgc #f3e7d5
    padding 25px 30px
    ml 108px
    mt -25px
    @media $LandscapeMax
      ml 0
      mt 0
    @media $LandscapeMedium
      flex-direction column
    &-from
      w 185px
      pr 30px
      @media $LandscapeMedium
        w 100%
        pr 0
    &-title
      fontify 13px 600 18px
    &-date
      mt 10px
      color alpha($dark, .5)
      fontify 13px 400 18px
    &-text
      w calc(100% - 185px)
      fontify 13px 400 18px
      @media $LandscapeMedium
        w 100%
        mt 20px
  &__more
    &-over
      text-align center
      mt 60px
    &-href
      c $dark
      fontify 15px 600 18px
      border-bottom 2px dotted $orange
      transition .7s border
      &:hover
        border-color transparent
  &__label
    color alpha(white, .5)
    fontify 14px 400 24px
  &-rait
    mb 37px
    pt 7px
  &__raiting
    &-over
      pos relative
      font-size 0
      mt 10px
    &-inp
      pos absolute
      size 0
      border 0
      l -200vw
      t -200vh
    &-item
      cursor pointer
      size 14px 12px
      background url('data:image/png;base64,') no-repeat center
      &.choosed
        background url('data:image/png;base64,') no-repeat center
      & + &
        ml 2px

.popup_feedback
  color white
  p:not([class])
    margin 18px 0
    fontify 16px 300 24px
    @media $LandscapeMax
      fontify 14px 300 24px
  a:not([class])
    color inherit
    border-bottom 2px solid $orange
    transition .5s border
    &:hover
      border-color transparent
  .common__textarea
    h 100px