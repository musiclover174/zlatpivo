.publ
  width 100%
  margin-bottom 30px

  &__item
    display flex
    align-items flex-end
    justify-content center
    flex-direction column
    position relative
    width 100%
    background-position center
    background-repeat no-repeat
    background-size cover
    text-align right
    padding 51px
    min-height 438px
    z-index 1

    @media $LandscapeMedium
      padding 35px
      align-items center
      text-align center

    &:before
      content ''
      display block
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      background-color rgba(#2b284c, .4)
      z-index -1

      @media $LandscapeMin
        background-color rgba(#2b284c, .65)

    &-title
      color white
      font-family $cyr
      font-size 55px
      font-weight 400
      line-height 55px
      max-width 650px

      @media $desktopMedium
        font-size 30px
        line-height 34px

      @media $LandscapeMax
        max-width 400px

      @media $PortraitMax
        font-size 26px
        line-height 28px

    &-text
      color white
      font-size 16px
      font-weight 400
      line-height 30px
      margin-top 10px
      max-width 510px

      @media $LandscapeMax
        max-width 400px

    &-btn-href
      margin-top 31px

