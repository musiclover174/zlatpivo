.not-found
  text-align: center
  &__title
    font-size 300px
    line-height 300px
    font-weight 600
    color: $blue
    position relative
    margin-bottom 6px

    &:before
      content: ''
      position: absolute
      top: -100px;
      left: 47%;
      transform: translateX(-50%)
      width 349px
      height 237px
      background-image: url('../i/404.png')
      z-index: -1

  &__subtitle
    font-size 18px
    font-weight normal
    margin-bottom 21px

  &__text
    p
      font-weight 600!important

@media only screen and (max-width: 700px)
  .not-found
    &__title
      font-size 40vw
      line-height 40vw

      &:before
        content: none
