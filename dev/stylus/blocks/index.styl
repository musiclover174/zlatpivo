.banner
  h 100vh
  dfv(flex-start, flex-end)
  pb 8%
  pos relative
  @media $LandscapeMax
    h auto
    pt 200px
    pb 40px
  @media $LandscapeMedium
    pt 160px
  @media $LandscapeMin
    pt 180px
  &__tonext
    size 0
    white-space nowrap
    pos absolute
    b 95px
    r 100px
    color $orange
    fontify 13px 600 13px
    text-transform uppercase
    transform rotate(-90deg)
    transform-origin 100% 0
    @media $desktopMedium
      r 58px
    @media $LandscapeMax
      dn()
    &:before
      content ""
      size 8px 34px
      background url('data:image/png;base64,') no-repeat center
      pos absolute
      l -30px
      t -10px
      transform rotate(90deg)
      animation arrow 1s ease-in-out infinite
  &__inner
    max-width 1110px
    padding 0 30px
    margin 0 auto
    @media $desktopMax
      max-width 845px
    @media $desktopMedium
      max-width 80%
    @media $desktopMin
      max-width 85%
    @media $LandscapeMax
      max-width 100%
      padding 0 35px
    @media $LandscapeMedium
      padding 0 20px
  &__title
    font-family $cyr
    color white
    transform rotate(-9deg)
    fontify 110px 400 100px
    ml 49px
    @media $desktopMax
      fontify 84px 400 80px
    @media $LandscapeMax
      fontify 64px 400 60px
    @media $LandscapeMedium
      ml 0
    @media $LandscapeMin
      fontify 30px 400 32px
      transform none
  &__subtitle
    color white
    fontify 16px 400 24px
    margin 115px 0 0 auto
    text-align right
    max-width 760px
    @media $desktopMax
      fontify 14px 400 24px
      mt 85px
      max-width 690px
    @media $LandscapeMedium
      max-width 80%
    @media $LandscapeMin
      max-width 100%
      text-align left
      mt 35px

@keyframes arrow {
  from,
  to { 
    l -30px 
  }   

  50% { 
   l -28px
  }
}