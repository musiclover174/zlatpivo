.catalog
  position relative

  .publ
    margin-left 15px
    margin-right 15px

    @media $LandscapeMin
      margin-left 0
      margin-right 0

  &_card
    .publ
      margin-left 0
      margin-right 0

  &__products
    display flex
    flex-wrap wrap
    margin 0 -15px
    width calc(100% + 30px)

    @media $LandscapeMin
      margin 0
      width 100%

  &__product
    width calc(50% - 30px)
    background-color #f3e7d5
    margin 0 15px 30px

    @media $LandscapeMin
      width 100%
      margin 0 0 30px

    &:hover
      .catalog__product-hover
        opacity 1
        visibility visible

      .markers__item_yellow
        color #fff
        background-color #3c3e7f

    &-overimg
      display block
      position relative
      width 100%
      padding-top 81.555%
      overflow hidden
      z-index 1

    &-img
      position absolute
      left 50%
      top 50%
      transform translate(-50%,-50%)
      max-width 90%
      max-height 90%

    &-hover
      width 100%
      height 100%
      position absolute
      top 0
      left 0
      background-repeat no-repeat
      background-position center
      background-size cover
      z-index -1
      opacity 0
      visibility hidden
      transition opacity .4s, visibility .4s

    &-info
      border-top 1px solid rgba(#4d4d4d, .2)
      padding 29px 37px 53px
      background-repeat no-repeat
      background-position right bottom

      @media $LandscapeMedium
        padding 20px 20px 30px

      &-top
        display flex
        flex-wrap wrap
        align-items flex-start

    &-title
      color #3c3c3c
      font-size 36px
      font-weight 600
      line-height 36px
      align-self flex-start
      margin-right 30px

      @media $desktopMedium
        font-size 30px
        line-height 34px

      @media $PortraitMax
        font-size 26px
        line-height 28px

      span
        border-bottom 2px solid #FFC100
        transition border .4s

      &:hover
        color #3c3e7f

        span
          border-color transparent

    &-descr
      margin-top 21px
      color #3c3c3c
      font-size 16px
      font-weight 400
      line-height 24px

  &__filter
    position absolute
    display inline-flex
    top -76px
    right 0

    @media $LandscapeMax
      position relative
      top auto
      right auto
      margin-bottom 25px
      flex-wrap wrap

    &:before
      content '/'
      position relative
      display inline-block
      vertical-align top
      color #3c3c3c
      font-family Montserrat
      font-size 15px
      font-weight 600
      line-height 19px
      margin-right 15px

    &-item
      margin-left 30px

      @media $LandscapeMax
        margin-left 0
        margin-right 25px
        margin-bottom 15px

      &:first-child
        margin-left 0

    &-href
      color #3c3c3c
      font-size 15px
      font-weight 600
      line-height 19px
      border-bottom 2px solid #FFC100
      white-space nowrap
      transition border .4s

      &:hover, &_active
        border-bottom-color transparent

  &__more
    &-over
      margin-top 15px
      text-align center

    &-href
      color #3c3c3c
      font-size 15px
      font-weight 600
      line-height 19px
      border-bottom 2px dotted #FFC100
      transition border .4s

      &:hover
        border-bottom-color transparent

  &__card
    display flex
    width 100%
    margin-bottom 30px

    @media $LandscapeMax
      flex-wrap wrap

    &-overimg
      width calc(100% - 540px)

      @media $desktopMin
        width 50%

      @media $LandscapeMax
        width 100%

      span
        display block
        width 100%
        height 100%
        background-position 50% 50%
        background-repeat no-repeat
        background-size cover

        @media $LandscapeMax
          padding-top 89%

    &-info
      display flex
      flex-direction column
      position relative
      padding 33px 60px 57px 40px
      flex-shrink 0
      width 540px
      background-color #2b284c
      overflow hidden
      z-index 1

      @media $desktopMin
        width 50%
        padding-right 40px

      @media $LandscapeMax
        width 100%

      @media $LandscapeMedium
        padding 35px 30px 40px

      @media $PortraitMax
        padding 25px 20px 30px

      &:after
        content ''
        display block
        position absolute
        left 110px
        bottom 0
        width 644px
        height 368px
        background url('../../img/pattern.png') no-repeat center
        background-size contain
        opacity 0.02
        z-index -1

    &-descr
      color white
      font-size 13px
      font-weight 400
      line-height 24px
      margin-bottom 41px

      @media $PortraitMax
        margin-bottom 30px

    &-read
      display flex
      align-items flex-start

      @media $LandscapeMedium
        flex-wrap wrap

    &-href-file
      flex-shrink 0
      margin-right 28px

      @media $PortraitMax
        padding 0 20px

    &-type-file
      margin-top 8px
      color rgba(white, .3)
      font-size 13px
      font-weight 400
      line-height 17px

      @media $LandscapeMedium
        width 100%
        margin-top 20px

    &-bottom
      display flex
      align-items flex-end
      margin-top 69px

      @media $PortraitMax
        margin-top 30px
        flex-wrap wrap
