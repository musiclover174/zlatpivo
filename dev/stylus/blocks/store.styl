.store
  .text
    max-width 100%
    margin-top 0

  &__scroll-wrap
    position relative
    max-height 900px
    padding-right 86px
    margin-top -4px

    @media $desktopMedium
      padding-right 60px

    @media $LandscapeMax
      padding-right 0
      margin-top 0
      max-height none

      .ps__rail-y
        display none

  &__row
    display flex
    flex-wrap wrap
    justify-content space-between

  &__col
    &:first-child
      width calc(50% + 71px)

      @media $LandscapeMax
        width 100%

    &+&
      width calc(50% - 122px)

      @media $LandscapeMax
        display none

  &__map
    width 100%
    height 900px

  &__item
    &+&
      margin-top 50px

    &-top
      display flex
      flex-wrap wrap
      align-items flex-start
      margin-bottom 16px

    &-title
      color #3c3c3c
      font-size 36px
      font-weight 600
      line-height 42px
      margin-right 27px
      max-width calc(100% - 150px)

      @media $LandscapeMedium
        width 100%
        max-width 100%
        font-size 26px
        line-height 28px

    &-read-review
      color #3c3c3c
      font-size 14px
      font-weight 400
      line-height 17px
      border-bottom 2px dotted #FFC100
      transition border .7s
      margin-top 20px

      &:hover
        border-bottom-color transparent

    &-text
      margin-bottom 18px
      max-width 510px

      @media $LandscapeMax
        max-width 100%

    &-info
      margin-bottom 21px

    &-gallery
      &-overimg
        display block
        width 100%
        &+&
          margin-top 30px

      &-img
        width 100%
        max-width 100%
        height auto

      &-more
        margin-top 30px
        text-align center

        &-btn
          color #3c3c3c
          font-size 15px
          font-weight 600
          line-height 24px
          border-bottom 2px dotted #FFC100
          transition border .7s

          &:hover
            border-bottom-color transparent

      &-hidden
        display none
        margin-bottom 20px

